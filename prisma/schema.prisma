generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

model Session {
  id      Int    @id @default(autoincrement())
  session String @db.Uuid

  @@map("session")
}

model News {
  id        Int      @id @unique
  title     String
  content   String
  isShown   Boolean  @map("is_shown")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("news")
}

model Teammate {
  id          Int      @id @default(autoincrement())
  name        String
  quote       String?
  tags        String[]
  description String
  imageUrl    String?

  @@map("team")
}

model Winner {
  id           Int     @id @default(autoincrement())
  name         String
  review       String?
  descripction String
  medals       Medal[]
  imageUrl     String?

  @@map("winners")
}

enum Medal {
  MEDAL1
  MEDAL2
  MEDAL3
  MEDAL4
}
